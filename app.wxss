/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


/* vant样式 */

.p_0 .van-cell--borderless  {
  padding:0
}


/*弹窗公共样式*/

.moni_dialog {
  background:#fff;
}

.renew_btn {
  height: 72rpx;
  border-radius: 6rpx;
  border: 1px solid #488FF1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  margin-top: 40rpx;
}


.renew_input .van-field__input{
  min-height: 72rpx;
  height: 72rpx;
  background:rgba(242, 242, 242, 1);
  padding:0 24rpx;
  border-radius: 6px;
  transform: translateZ(0);
}

.dialog_btn_box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin:20rpx 0 0 0;
}

.dialog_btn_box .cancel_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 172rpx;
  height: 56rpx;
  border-radius: 6rpx;
  border: 1px solid #488FF1;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  margin-right: 15rpx;
}

.dialog_btn_box .submit_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 172rpx;
  height: 56rpx;
  border-radius: 6rpx;
  background:rgba(72, 143, 241, 1);
  font-size: 28rpx;
  border: 1px solid #488FF1!important;
  font-weight: 400;
  color: #fff;
  margin-left: 15rpx;
}

.dialog_title  {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
  text-align: left;
  padding:20rpx 0;
}

.dialog_box {
  padding:40rpx;
  background:#fff;
}

.moni_dialog .dialog_box {
  width: 66%;
  height: 800rpx;
  position: fixed;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  margin:auto;
  border-radius: 6rpx;
}

.moni_dialog .dialog_box_high {
  height:480rpx!important;
}

.moni_dialog  .field-index--van-field {
  padding:10px 0!important;
}
