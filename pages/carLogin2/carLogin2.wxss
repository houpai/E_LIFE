page {
  height: 100%;
  background-color: #fff;
}

.carLogin-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.bottom_bg_box {
  height: 250rpx;
  width: 100%;
  position: relative;
}

.bottom_bg_box .img {
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.xieyi {
  width: 100%;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  align-items: center;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  margin-top: 120rpx;
}

.xieyi .text {
  height: 100%;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(2, 60, 228, 1);
  line-height: 40rpx;
  align-items: center;
  display: flex;
}

.login_content {
  flex: 1;
  height: 0;
  padding: 0 60rpx 30rpx 60rpx;
  box-sizing: border-box;
}


.login_content .weixin_login_box {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login_content .weixin_login_box .wxLogin_btn {
  width: 100%;
  height: 88rpx;
  background: #488FF1;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;

  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}

.login_content .weixin_login_box .change_loginType {
  font-size: 32rpx;
  font-weight: bold;
  color: #488FF1;
  line-height: 44rpx;
}

.login_content .phone_login_box .change_loginType {
  font-size: 32rpx;
  font-weight: bold;
  color: #488FF1;
  line-height: 44rpx;
  width: 100%;
  text-align: center;
}




.login_content .weixin_login_box .wxLogin_btn .img {
  display: block;
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}


.input_item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  padding: 40rpx 0;
}

.input_label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44px;
  flex-shrink: 0
}

.input {
  margin-left: 40rpx;
  flex: 1;
  width: 0;
  height: 80rpx;
  line-height: 80rpx;
}

.btn_box {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx
}

.btn_box .img {
  display: block;
  width: 50%;
  height: 50%;
}

.sendCode_btn {
  width: 180rpx;
  height: 56rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(2, 60, 228, 1);
  display: flex;
  justify-content: center;
  background: #023CE4;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #ffffff;
}

.disabled_send_btn {
  background: rgba(204, 204, 204, 1);
  border: 1px solid #CCCCCC !important;
}

.disabled_login.login_btn {
  opacity: 0.5;
}

.login_btn {
  height: 88rpx;
  background: #023CE4;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
  margin-bottom: 60rpx;
}
















.top_title_box {
  box-sizing: border-box;
  padding: 50rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top_title_box .img {
  display: block;
  width: 280rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.top_title_box .name {
  font-size: 50rpx;
  font-weight: bold;
  color: #333333;
  line-height: 84rpx;
}

.top_title_box .sub_name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 70rpx;
}




.moni_dialog_xieyi .dialog_box {
  width: 566rpx;
  height: 800rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  border-radius: 6rpx;
  box-sizing: border-box;
  z-index: 9;
  padding: 0 !important;

}

.moni_dialog_xieyi .dialog_box_high {
  height: 800rpx;
  display: flex;
  flex-direction: column;
}

.moni_dialog_xieyi .field-index--van-field {
  padding: 10px 0 !important;
}

.dialog_xieyi_title {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.dialog_xieyi_title .close_btn {
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
}

.xieyi_detail {
  flex: 1;
  height: 0;
}

.xieyi_detail .scroll_container {
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  padding: 30rpx;
}


.timer_box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}


.timer_box .know_btn {
  width: 504rpx;
  height: 72rpx;
  background: rgba(72, 143, 241, 0.4);
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #488FF1;
  color: #fff;
}

.timer_box .know_btn.disabled {
  background: rgba(72, 143, 241, 0.4);
}