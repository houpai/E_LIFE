page {
  height: 100%;
  background: #F2F2F2;
}

.scroll_box {
  background: #F2F2F2;
  margin: 20px 0;
  box-sizing: border-box;
}


.scroll_box .list_item {
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  box-sizing: border-box;
}

.scroll_box .list_item .left {
  flex: 1;
  width: 0;
}

.scroll_box .list_item .left .action_name {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 30rpx;
}

.scroll_box .list_item .left .action_date {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}

.scroll_box .list_item .detail {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 44rpx;
}

.scroll_box .list_item .red {
  color: rgba(241, 89, 72, 1);
}

.scroll_box .list_item .blue {
  color: rgba(72, 143, 241, 1);
}

.noResult_tip {
  padding: 30rpx 0;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  text-align: center;
}


/* 3.10新增 */
.topContainer_box {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  height: 200rpx;
  position: relative;
}

.time_check_btn {
  display: flex;
  align-items: center;


  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  line-height: 40rpx;

}

.time_check_btn .month {
  color: rgba(72, 143, 241, 1);
  font-size: 32rpx;
  line-height: 44rpx;

}


.time_check_btn .van-icon {

  margin: 4rpx 12rpx;

}

.topContainer_box .btn_box {
  display: flex;
  align-items: center;
}

.topContainer_box .btn_box .btn {
  width: 120rpx;
  height: 48rpx;
  border-radius: 6rpx;
  border: 1px solid #333333;
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;

}

.topContainer_box .btn_box .active_btn {

  background: #498FF2;
  color: #fff;
  border: 1px solid #498FF2;
}

.topContainer_box .bg_img {
  position: absolute;
  bottom: 0;
  right: 0;
  display: block;
  width: 176rpx;
  height: 160rpx;
  z-index: 1;
}