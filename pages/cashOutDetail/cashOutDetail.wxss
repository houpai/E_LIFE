page {
  height: 100%;
  background: #F2F2F2;
}

.scroll_box {
  background: #F2F2F2;
  margin:20px 0;
  box-sizing: border-box;
}


.scroll_box .list_item {
  background:#fff;
  display: flex;
  align-items: center;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
  padding:30rpx;
  box-sizing: border-box;
} 

.scroll_box .list_item .left {
  flex: 1;
  width: 0;
}

.scroll_box .list_item .left .action_name {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 30rpx;
}

.scroll_box .list_item .left .action_date {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}

.scroll_box .list_item .detail {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 44rpx;
}

.scroll_box .list_item .red {
  color:rgba(241, 89, 72, 1);
}

.scroll_box .list_item .blue {
  color:rgba(72, 143, 241, 1);
}

.noResult_tip {
  padding:30rpx 0;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  text-align: center;
}