page {
  height: 100%;
  background: #F2F2F2;
}

.recharge_box {
  margin:30rpx;
  min-height: 260px;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:40rpx 30rpx;
}

.recharge_box .value_box {
  display: flex;
  align-items: center;
}

.recharge_box  .money_icon  {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  line-height: 50rpx;
}

page .van-field__input {
  min-height: 48px;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  line-height: 50rpx;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
}

.recharge_box  .input {
  flex: 1;
  flex-shrink: 0;
}

.recharge_box .charge_tip {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
  margin:10rpx 0 0 50rpx
}

.recharge_box  .submit_btn {
  height: 88rpx;
  background: #488FF1;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-top:120rpx;
}