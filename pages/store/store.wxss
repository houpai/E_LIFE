page{
  background-color: #F2F2F2;
}

.storeIndex_container {

}

.storeIndex_container .store_bg {
  height: 750rpx;
}
.storeIndex_container image {
  display: block;
  width: 100%;
  height: 750rpx;
}

.storeIndex_container .store_message_box {
  margin:-80rpx 30rpx 80rpx 30rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:30rpx
}

.storeIndex_container .store_message_box .name_logo {
  display: flex;
  padding-bottom:30rpx;
}

.storeIndex_container .store_message_box .name_logo .left image{
  display: block;
  width: 108rpx;
  height: 108rpx;
  flex-shrink: 0;
}

.storeIndex_container .store_message_box .name_logo .right {
  flex: 1;
  width: 0;
  flex-shrink: 0;
  margin-left: 30rpx;
}

.storeIndex_container .store_message_box .name_logo .right .store_name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
}

.storeIndex_container .store_message_box .name_logo .right .phone {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
  margin-top:24rpx;
}

.storeIndex_container .store_message_box .name_logo .right .store_address {
  display: flex;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
  margin-top:24rpx;
}

.storeIndex_container .store_message_box .name_logo .right .store_address .address_label {
  flex-shrink: 0;
}

.storeIndex_container .store_message_box .name_logo .right .store_address .address_detail {
  flex: 1;
  width: 0;
  flex-wrap: wrap;
}

.open_card {
  margin:0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: #488FF1;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}


