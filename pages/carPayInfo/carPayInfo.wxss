page {
  height: 100%;
  background-color: rgba(242, 242, 242, 1);
}


.carPayInfo-container .bg_box {
  height: 600rpx;
  background: linear-gradient(180deg, #486BF1 0%, #488FF1 100%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 140rpx;
}


.carPayInfo-container .bg_box .img {
  display: block;
  width: 156rpx;
  height: 156rpx;
  margin-bottom: 40rpx;
}

.carPayInfo-container .bg_box .pay_tip {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}


.carPayInfo-container .detail_box {
  margin: -130rpx 40rpx 40rpx 40rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 60rpx;
}


.carPayInfo-container .detail_box .price {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  line-height: 84rpx;
  margin-top: 60rpx;
  margin-bottom: 12rpx;
}

.carPayInfo-container .detail_box .discount {
  font-size: 28rpx;
  font-weight: bold;
  color: #F15948;
  line-height: 40rpx;
  margin-bottom: 80rpx;
}

.carPayInfo-container .detail_box .pay_btn {
  width: 380rpx;
  height: 72rpx;
  background: #488FF1;
  border-radius: 6px;
  border: 1px solid #488FF1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}


