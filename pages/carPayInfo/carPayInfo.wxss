page {
  height: 100%;
  background-color: rgba(242, 242, 242, 1);
}


.carPayInfo-container .bg_box {
  height: 520rpx;
  background: linear-gradient(180deg, #486BF1 0%, #488FF1 100%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 140rpx;
}


.carPayInfo-container .bg_box .img {
  display: block;
  width: 156rpx;
  height: 156rpx;
  margin-bottom: 40rpx;
}

.carPayInfo-container .bg_box .pay_tip {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}


.carPayInfo-container .detail_box {
  margin: -80rpx 40rpx 40rpx 40rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 60rpx;
}


.carPayInfo-container .detail_box .price {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  line-height: 84rpx;
  margin-top: 60rpx;
  margin-bottom: 12rpx;
}

.carPayInfo-container .detail_box .discount {
  font-size: 28rpx;
  font-weight: bold;
  color: #F15948;
  line-height: 40rpx;
  margin-bottom: 80rpx;
}

.carPayInfo-container .detail_box .pay_btn {
  width: 380rpx;
  height: 72rpx;
  background: #488FF1;
  border-radius: 6px;
  border: 1px solid #488FF1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}

.use_tip_title {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
  text-align: center;
}

.use_tip_bg_box {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 30rpx;
}

.use_tip_bg_box .item_box {
  display: flex;
  flex-direction: column;
  align-items: center ;
}
.use_tip_bg_box .item_box .img{
  display: block;
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 18rpx;
}


.use_tip_bg_box .step_box .step_img{
  display: block;
  width: 36rpx;
  height: 20rpx;
  margin-bottom: 18rpx;
}
.use_tip_bg_box .step_box {
  box-sizing: border-box;
  padding-top: 26rpx;
}

.wrapper {
  display: flex;
  justify-content: center;
  height: 100%;
}

.wrapper .block {
  margin: 300rpx 48rpx 48rpx 48rpx;
  height: 760rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  border-radius: 6rpx;
  position: relative;
  box-sizing: border-box;
  padding: 30rpx;
}

.wrapper .block .dialog_close_btn {
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.wrapper .block .dialog_title_box {
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wrapper .block .dialog_title_box .dialog_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.wrapper .block .dialog_title_box .icon_box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 130rpx 40rpx 130rpx;
  display: flex;
  justify-content: space-between;
}

.wrapper .block .dialog_title_box .icon_box .icon_img {
  display: block;
  width: 72rpx;
  height: 72rpx;
}

.wrapper .block .code_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;

}
.wrapper .block .code_box .code_img {
  display: block;
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 30rpx;
}

.wrapper .block .code_box .code_desc {
  font-weight: bold;
  color: #333333;
  }