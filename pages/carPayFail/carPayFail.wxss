page {
  height: 100%;
  background-color: rgba(242, 242, 242, 1);
}


.carPayInfo-container .bg_box {
  height: 520rpx;
  background: linear-gradient(180deg, #486BF1 0%, #488FF1 100%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 140rpx;
}


.carPayInfo-container .bg_box .img {
  display: block;
  width: 156rpx;
  height: 156rpx;
  margin-bottom: 40rpx;
}

.carPayInfo-container .bg_box .pay_tip {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}


.carPayInfo-container .detail_box {
  margin: -80rpx 30rpx 40rpx 30rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}

.carPayInfo-container .detail_box .detail_view {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 48rpx;
}

.carPayInfo-container .detail_box  .box_title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 30rpx;
}

.carPayInfo-container .fail_reason_box {
  margin: 0 30rpx 40rpx 30rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}

.carPayInfo-container .fail_reason_box .box_title{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 30rpx;
}

.carPayInfo-container .customer_service_btn {
  margin: 0 30rpx 30rpx 30rpx;
  height: 88rpx;
  background: #488FF1;
  border-radius: 6rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}