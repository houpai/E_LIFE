page {
  background-color: #F2F2F2;
  padding-bottom: 60rpx;
}

.modifyPassword_container {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}


.modifyPassword_container .input_item_box .item_container_box,
.modifyPassword_container .store_bg_box .item_container_box {
  box-sizing: border-box;
  padding: 30rpx 0 16rpx 0;
  margin: 0 30rpx;
  border-radius: 6rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1)
}

.modifyPassword_container .input_item_box .item_container_box .margin_box {
  margin-top: 20rpx;
}

.input_item_box,
.store_bg_box,
.item_container_box {
  background: #FFFFFF;
  border-radius: 6rpx;
  padding-bottom: 30rpx;
}

.modifyPassword_container .input_label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
}

.verificationCode {
  width: 180rpx;
  height: 56rpx;
  border-radius: 6px;
  border: 1px solid #488FF1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
}

.disabled_sendBtn {
  border: 1px solid rgba(204, 204, 204, 1);
  color: rgba(204, 204, 204, 1);
  width: 180rpx;
  height: 56rpx;
  border-radius: 6px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
}

.modifyPassword_container .submit_btn {
  height: 88rpx;
  background: #488FF1;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin: 80rpx 0 0 0;
}