page {
  height: 100%;
}


page .van-dialog__message {
  font-size: 16px !important;
  line-height: 22px !important;
}

page .dialog-index--van-dialog__confirm {
  color:rgba(72, 143, 241, 1)!important;
}

.cardSys-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.cardSys-container .top_bg_box {
  width: 100%;
  height: 142rpx;
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
  border-radius: 0px 0px 60rpx 60rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
}

.cardSys-container .top_bg_box .top_bg_container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding:0 30rpx;
}

.cardSys-container .top_bg_box .top_bg_container .top_bg_title {
  flex-shrink: 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}
.cardSys-container .top_bg_box .top_bg_container .add_card_btn .img {
  display: block;
  width: 32rpx;
  height:32rpx;
  margin:0 10rpx 0 0;
}
.cardSys-container .top_bg_box .top_bg_container .add_card_btn {
  display: flex;
  align-items: center;
}
.cardSys-container .top_bg_box .top_bg_container .add_card_btn .text {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
}


.cardSys-container .search_box {
  margin: 0 30rpx;
}

.cardSys-container .search_box .van-search__content {
  background: #FFFFFF;
  padding: 0;
  border-right: 1px solid rgba(0, 0, 0, .1)
}

.cardSys-container .search_box .van-search {
  padding: 0 20rpx;
  border-radius: 60rpx;
  margin-top: -46rpx;
  overflow: hidden;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
}


.cardSys-container .search_box .van-field__input {
  min-height: 66rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
}

.cardSys-container .search_box .van-cell__left-icon-wrap,
.cardSys-container .search_box .van-cell__right-icon-wrap {
  height: var(--cell-line-height, px);
  color: #CCCCCC;
  font-size: 40rpx;
}

.cardSys-container .search_box .search_btn {
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 44rpx;
  height: 100%;
  padding: 0 20rpx;
}

.cardSys-container .card_list {
  margin: 40rpx 0;
  background: #FFFFFF;
  padding-bottom: 40rpx;
}

.cardSys-container .card_list .card_item_box {
  margin: 0 30rpx 0 30rpx;
  height: 254rpx;
  border-radius: 6rpx;
  color: #fff;
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
}

.cardSys-container .card_list .card_item_box .left_container {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  justify-content: space-between;
}

.cardSys-container .card_item_box .left_container .card_message_box .name {
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 50rpx;
}

.cardSys-container .card_item_box .left_container .card_message_box .per {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 34rpx;
  margin-top: 16rpx;
}

.cardSys-container .card_item_box .left_container .card_message_box .validity_date {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 34rpx;

}

.cardSys-container .card_list .card_item_box .right_container {
  flex: 1;
  width: 0;
  flex-shrink: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 40rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 56rpx;
}

.cardSys-container .card_list .card_item .card_name_price {
  box-shadow: 0px -2px 4px 0px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  padding: 24rpx 30rpx 60rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cardSys-container .card_list .card_item .card_name_price .card_name {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}

.cardSys-container .card_list .card_item .card_name_price .card_name .edit_btn {
  display:block;
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.cardSys-container .card_list .card_item .card_name_price .card_price {
  font-size: 28rpx;
  font-weight: 400;
  color: #F15948;
  line-height: 40rpx;
}

.van-dialog__button {
  width: 50%;
  flex: 0;
}