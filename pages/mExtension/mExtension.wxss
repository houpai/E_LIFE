page{
  background-color: #F2F2F2;
}

.storeIndex_container {

}

.storeIndex_container .store_bg {
  height: 750rpx;
}
.storeIndex_container image {
  display: block;
  width: 100%;
  height: 750rpx;
}

.storeIndex_container .store_message_box {
  margin:-80rpx 30rpx 80rpx 30rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:30rpx
}

.storeIndex_container .store_message_box .name_logo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
  padding-bottom:30rpx;
}

.storeIndex_container .store_message_box .name_logo .left {
  display: flex;
  flex-direction: column;
  justify-items:center;
  flex: 1;
  flex-shrink: 0;
}

.storeIndex_container .store_message_box .name_logo .left .sub_label{
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40px;

}

.storeIndex_container .message_label{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;

}

.storeIndex_container .store_message_box .name_logo .right .img{
  display: block;
  width: 108rpx;
  height: 108rpx;
}

.message_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:60rpx 0;
  padding-bottom: 0;
}
.message_item image{
  display: block;
  width: 474rpx;
  height: 474rpx;
  margin-bottom: 30rpx;
}

.message_item .tip {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  margin-bottom: 16rpx;
}
