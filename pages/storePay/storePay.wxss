page {
  background-color: #fff;
}

.storeIndex_container {}

.storeIndex_container .store_bg {
  height: 750rpx;
}

.storeIndex_container image {
  display: block;
  width: 100%;
  height: 750rpx;
}

.storeIndex_container .store_message_box {
  margin: -80rpx 30rpx 80rpx 30rpx;
  background: #fff;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 30rpx
}

.storeIndex_container .store_message_box .name_logo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding-bottom: 30rpx;
}

.storeIndex_container .store_message_box .name_logo .left {
  display: flex;
  flex-direction: column;
  justify-items: center;
  flex: 1;
  flex-shrink: 0;
  box-sizing: border-box;
  margin-left: 30rpx;
}

.storeIndex_container .store_message_box .name_logo .left .sub_label {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 60rpx;

}

.storeIndex_container .message_label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;

}

.storeIndex_container .store_message_box .name_logo .right .img {
  display: block;
  width: 108rpx;
  height: 108rpx;
}

.storeIndex_container .card_box {
  height: 232rpx;
  background: linear-gradient(180deg, #A60100 0%, #A60100 100%);
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx;
}

.storeIndex_container .card_box .jifen {
  font-size: 40rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 56rpx;

}

.storeIndex_container .card_box .card {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;


}

.storeIndex_container .pay_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(242, 242, 242, 1);
  box-sizing: border-box;
  padding:0 30rpx 30rpx 30rpx;
}

.storeIndex_container .pay_box .pay_tip {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  margin: 40rpx 0;
}


.storeIndex_container .pay_box .pay_value {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  line-height: 84rpx;
  margin-bottom: 160rpx;

}

.storeIndex_container .pay_box .pay_btn {
  width: 100%;
  box-sizing: border-box;
  height: 88rpx;
  background: #488FF1;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height:44rpx;
}