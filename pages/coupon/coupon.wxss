.submit_btn_box {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding:30rpx 30rpx 60rpx 30rpx;
  box-sizing: border-box;
  background:#fff;
  z-index: 2;
}

.submit_btn_box .submit_btn {
  display: flex;
  align-items: center;
  justify-content: center ;
  height: 88rpx;
  background: #488FF1;
  border-radius: 6rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
}

