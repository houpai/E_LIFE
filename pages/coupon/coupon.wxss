.coupon_container {
  font-size: 24rpx;
  margin: 40rpx 30rpx;
}

.coupon_container .coupon_list .coupon_item_box {
  min-height: 240rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.coupon_container .coupon_list .coupon_item_box .detail_message_box {
  display: flex;
  padding:30rpx;
  width: 100%;
}

.coupon_container .coupon_list .coupon_item_box .detail_message_box .price {
  flex-shrink: 0;
  padding:0 60rpx 30rpx 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
  border-right: 1px solid rgba(0, 0, 0, 0.1);
}
.coupon_container .coupon_list .coupon_item_box .detail_message_box .original_price {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  text-decoration: line-through;

}

.coupon_container .coupon_list .coupon_item_box .detail_message_box .price .per {
  font-size: 40rpx;
  font-weight: 500;
  color: #FC302C;
  line-height: 56rpx;
}

.coupon_container .coupon_list .coupon_item_box .detail_message_box .price .company {
  font-size: 24rpx;
  font-weight: 500;
  line-height: 40rpx;
}

.coupon_container .coupon_list .detail_message_box .name_box {
  flex: 1;
  width: 0;
  flex-shrink: 0;
  padding:0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:0 30rpx 30rpx 30rpx;
  height: 180rpx;
  box-sizing: border-box;
  position: relative;
}

.coupon_container .coupon_list .detail_message_box .name_box .img {
  display: block;
  position: absolute;
  right: 0;
  bottom: 0;
  width: 116rpx;
  height: 152rpx;
}

.coupon_container .coupon_list .detail_message_box .name_box .name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}

.coupon_container .coupon_list .detail_message_box .name_box .date {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

