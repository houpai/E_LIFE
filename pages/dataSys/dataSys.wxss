.dataSys-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.dataSys-container .top_bg_box {
  width: 100%;
  height: 240rpx;
  background: rgba(72, 143, 241, 1);
  box-sizing: border-box;
  padding-top: 20rpx;
}

.dataSys-container .top_bg_box .time_box {
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}

.dataSys-container .top_bg_box .time_box .time_check_box {
  width: 100%;
  height: 68rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 6rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

.dataSys-container .scroll-list {
  margin: 0 0 40rpx 0;
  background: #FFFFFF;
  padding-bottom: 40rpx;
}

.dataSys-container .scroll-list .panel_box  {
  box-sizing: border-box;
  padding:30rpx
}

.dataSys-container .scroll-list .panel_box .panel_box_container {
  height: 180rpx;
  background: #F2F2F2;
  border-radius: 6px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.dataSys-container .scroll-list .panel_box .panel_box_container .panel_box_item {
  width: calc(100% / 3);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dataSys-container .scroll-list .panel_box .panel_box_container .panel_box_item .label {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;

}

.dataSys-container .scroll-list .panel_box .panel_box_container .panel_box_item .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  line-height: 50rpx;
  margin-top:16rpx;
}


.table_box {
  padding: 30rpx;
  box-sizing: border-box;
}

.table_box .table_flex_item {
  display: flex;
  align-items: center;

  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  padding:30rpx 0;


}

.table_box .table_title {
  color: #999999!important;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
}

.table_box .table_flex_item .flex_value {
  width: calc(70% / 3);
  flex-shrink: 0;
  text-align: center;
}

.table_box .table_flex_item .wd15 {
  width: 15%!important;
}

.detaile_btn_box {
  display: flex;
  justify-content: center;
  align-items: center;  
}

.detaile_btn_box .detaile_btn {
  width: 218rpx;
  height: 64rpx;
  background: #F2F2F2;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
}

.echart_box  {
  height: 650rpx;
  width: 100%;
  margin:30rpx 0;
}

.echart_box  ec-canvas {
  width: 100%;
  height:100%;
}

.echart_title {
  font-size: 32rrpx;
  font-weight:700;
  color: #333333;
  line-height: 40rpx;
  padding: 30rpx;
}
