.dataSys-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.dataSys-container .top_bg_box {
  width: 100%;
  height: 240rpx;
  /* background: rgba(72, 143, 241, 1); */
  box-sizing: border-box;
  padding-top: 20rpx;
}

.dataSys-container .top_bg_box .time_box {
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}

.dataSys-container .top_bg_box .time_box .time_check_box {
  width: 100%;
  height: 68rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  background: rgba(242, 242, 242, 1);
  border-radius: 6rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

.dataSys-container .scroll-list {
  margin: 0 0 40rpx 0;
  background: #FFFFFF;
  padding-bottom: 40rpx;
}

.chart_box {
  padding:70rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chart_box .chart_container {
  width: 348rpx;
  height: 348rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.chart_box .chart_container .chart_title {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.chart_box .chart_container .chart_value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 56rpx;
  margin:16rpx 0;
}

.chart_box .chart_container .chart_tip {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}

.line_box {
  margin:0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  padding:40rpx 30rpx;
}

.line_box .line_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 40rpx;
}

.line_box .line_item {
  margin-bottom: 40rpx;
}

.line_box .line_item .line_message {
  display: flex;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.card_name,.detail_value {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

page .van-progress__pivot{
  display: none;
}





