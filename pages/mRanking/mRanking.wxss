.dataSys-container {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.dataSys-container .top_bg_box {
  width: 100%;
  height: 320rpx;
  background: rgba(72, 143, 241, 1);
  box-sizing: border-box;
  padding: 20rpx 0;
}

.dataSys-container .top_bg_box .time_box {
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.dataSys-container .top_bg_box .time_box .time_check_box {
  width: 100%;
  height: 68rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 6rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

.dataSys-container .scroll-list {
  margin: 0 0 40rpx 0;
  background: #FFFFFF;
  padding-bottom: 40rpx;
}





