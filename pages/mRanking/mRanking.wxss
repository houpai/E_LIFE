.chart_box {
  margin: -80rpx 30rpx 30rpx 30rpx;
  height: 402rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:30rpx 0;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
}

.chart_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding:0 30rpx;
}

.chart_container {
  width: 100%;
  flex:1;
  height: 0;
}


.ranking_box {
  margin:60rpx 30rpx;
}

.ranking_box .ranking_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  box-sizing: border-box;
  padding:0 30rpx;
}


.table_box {
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:0rpx 30rpx 40rpx 30rpx;
}

.scroll_table {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: scroll;
  flex-direction: column;
}

.table_box .table_flex_item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  padding:30rpx 0;
}

.table_box .table_title {
  color: #999999!important;
}

.table_box .table_flex_item .flex_value {
  width: 25%;
  flex-shrink: 0;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.table_box .table_flex_item .wd10 {
  width: 10%!important;
}

.type_value  {
  width: 30%!important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.type_value image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
