page {
  height: 100%;
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
}


.codePage-container  {
  box-sizing: border-box;
  padding: 60rpx 30rpx;
}

.store_message_box {
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding: 40rpx 30rpx;

  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.store_message_box .right .img {
  display: block;
  width: 108rpx;
  height: 108rpx;
}

.store_message_box .right {
  margin-left: 20rpx;
}

.store_message_box .left {
  flex: 1;
  width: 0;
}

.store_message_box .left .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 30rpx;
}

.store_message_box .left .type {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}


.code_box {
  background: #FFFFFF;
  border-radius: 6rpx;
  overflow: hidden;
  padding-bottom: 60rpx;
}

.code_box .tab_box {
  display: flex;
}

.code_box .tab_box .tab_item{
  width: 50%;
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  background: #F2F2F2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.code_box .tab_box .active_tab.tab_item {
  color: #488FF1;
  border-bottom: 0;
  background-color: #fff;
}

.code_box .code_content {
  box-sizing: border-box;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.code_box .code_content .img {
  display: block;
  width: 460rpx;
  height: 460rpx;
  margin-bottom: 30rpx;
}

.code_box .download_btn {
  margin: 0 60rpx;
  height: 72rpx;
  background: #488FF1;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
}



