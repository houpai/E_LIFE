page {
  background: #F2F2F2;
}

.customerDetail_container {
  font-size: 20rpx;
}

.customerDetail_container .top_bg_box {
  width: 100%;
  height: 360rpx;  
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
  border-radius: 0px 0px 60rpx 60rpx;
  box-sizing: border-box;
}


.customer_detail_box .customer_item{
  /* height: 160rpx; */
  border-radius: 6rpx;
  margin-bottom:40rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding:30rpx;
}

.customer_detail_box .customer_item .customer_img {
  flex-shrink: 0;
}

.customer_detail_box .customer_item .customer_img .img {
  width: 96rpx;
  height: 96rpx;
}

.customer_detail_box .customer_item .customer_message {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  flex: 1;
  width: 0;
  margin-left: 30rpx;
}

.customer_detail_box .customer_item .customer_message .name {
  font-size: 14px;
  font-weight: 400;
  color: #fff;
  line-height: 22px;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.customer_detail_box .customer_item .customer_message .phone {
  font-size: 12px;
  font-weight: 400;
  color: #fff;
  line-height: 20px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.open_btn {
  width: 172rpx;
  height: 56rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 40rpx;
}

.sex_text {
  background: #393FD5;
  border-radius: 14px;
  color: #fff;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  padding: 0 20rpx;
}

.detail_message_box {
  margin: -180rpx 30rpx 30rpx 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  padding:40rpx 30rpx;
}

.setting_box {
  margin: 40rpx 30rpx 40rpx 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  padding:40rpx 30rpx;
}

.setting_box .setting_item {
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.setting_box .marginBottom0 {
  margin-bottom:0!important;
}
.setting_box .setting_label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
}

.detail_message_box .h2 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
}

.detail_message_box .flex_h2 {
  display: flex;
  justify-content: space-between;
}

.detail_message_box .flex_h2 .edit_text {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 40rpx;
}

.detail_message_box .flex_h2 .edit_text .edit_icon {
  margin-right: 10rpx;
}

.detail_message_box .message_box {
  background: #F2F2F2;
  border-radius: 6rpx;
  margin-top:40rpx;
  margin-bottom:60rpx;
  padding:30rpx;
}

.message_item_box {
  display: flex;
  margin-bottom: 30rpx;
}

.flex_item_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex_item_box .detail_btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.flex_item_box .detail_btn .right_icon {
  margin-left: 10rpx;
}

.marginBottom0{
  margin-bottom: 0!important;
}

.detail_message_box .message_box .label {
  width: 150rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  flex-shrink: 0;
  text-align: right;
}

.detail_message_box .message_box .value {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.detail_message_box .message_box .blue {
  color: rgba(72, 143, 241, 1)!important;
}

.detail_message_box .message_box .red {
  color: rgba(241, 89, 72, 1)!important;
}

.member_tip {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.member_tip .img {
  display: block;
  width:48rpx;
  height: 48rpx;
}

.member_tip .text {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFCC63;
  line-height: 34rpx;
}

page .van-action-sheet__header {
  text-align: left;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.actions_box {
  box-sizing: border-box;
  padding:30rpx;
  min-height: 600rpx;
}
.actions_box .actions_item {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  padding:30rpx 0;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
}

.actions_box .actions_item .text {
  color: RGBA(107, 165, 244, 1);
}