page {
  background: #F2F2F2;
}

.bonusSys_container {
  font-size: 20rpx;
}

.bonusSys_container .top_bg_box {
  width: 100%;
  height: 260rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
  border-radius: 0px 0px 60rpx 60rpx;
  padding: 60rpx 30rpx;
}

.bonusSys_container .top_bg_box .add_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bonusSys_container .top_bg_box .add_btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bonusSys_container .top_bg_box .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 50rpx;

}

.bonusSys_container .top_bg_box .add_btn .img {
  display: block;
  width: 32rpx;
  height: 32rpx;
  margin: 0 10rpx 0 0;
}

.bonusSys_container .top_bg_box .add_btn .text {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
}


.list_box {
  margin-top: -100rpx;
}

.list_box .list_item {
  background: #FFFFFF;
  border-radius: 6rpx;
  margin: 0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  padding: 30rpx;
}

.list_box .list_item .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list_box .list_item .btn_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list_box .list_item .btn_box .proportion_box {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}


.list_box .list_item .btn_box .proportion_box .proportion_value{
  color: rgba(72, 143, 241, 1);
}

.list_box .list_item .btn_box .edit_btn {
  width: 136rpx;
  height: 56rpx;
  background: #488FF1;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
}

