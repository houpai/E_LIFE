page {
  background: #F2F2F2;
}

.shareholderSys_container {
  font-size: 20rpx;
}

.shareholderSys_container .top_bg_box {
  width: 100%;
  height: 82rpx;  
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
  border-radius: 0px 0px 60rpx 60rpx;
}

.shareholderSys_container .search_box {
  margin:0 30rpx;
}

.shareholderSys_container .search_box .van-search__content {
  background: #FFFFFF;
  padding:0;
  border-right:1px solid rgba(0, 0, 0,.1)
}

.shareholderSys_container .search_box .van-search {
  padding:0 20rpx;
  border-radius: 60rpx;
  margin-top: -46rpx;
  overflow: hidden;
}


.shareholderSys_container .search_box .van-field__input  {
  min-height: 66rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
}

.shareholderSys_container .search_box .van-cell__left-icon-wrap, .shareholderSys_container .search_box .van-cell__right-icon-wrap  {
  height: var(--cell-line-height,px);
  color: #CCCCCC;
  font-size:40rpx;
}

.shareholderSys_container .search_box .search_btn {
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 44rpx;
  height: 100%;
  padding:0 20rpx;
}

.customer_list_box {
  margin-top:40rpx;
}


.customer_list_box .customer_item{
  margin:0 30rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  margin-bottom:40rpx;
  display: flex;
  box-sizing: border-box;
  padding:30rpx;
}

.customer_list_box .customer_item .customer_img {
  flex-shrink: 0;
}

.customer_list_box .customer_item .customer_img .img {
  width: 96rpx;
  height: 96rpx;
}

.customer_list_box .customer_item .customer_message {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  width: 0;
  margin-left: 30rpx;
}

.customer_list_box .customer_item .customer_message .nameAndPhone {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 50rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.customer_list_box .customer_item .customer_message .card_message text {
  font-size: 24rpx;
  font-weight: 400;
  color:rgba(51, 51, 51, 1);
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


/* 3.10号新增 */

page .van-dropdown-menu {
  background-color: rgba(72, 143, 241, 1);

}

page .van-dropdown-menu__title {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 50rpx;
  color: #fff
}

page .van-dropdown-menu__title:after {
  border-width: 4px;
  right: -8px;

}

.type_box {
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}

.type_box .btn {
  height: 56rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 6rpx;
  border: 1px solid rgba(242, 242, 242, 1);
  padding: 0 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;


  font-size: 28rpx;
  font-weight: 400;

}


.type_box .all_btn {
  width: 180rpx;
  height: 56rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 6rpx;
  border: 1px solid rgba(242, 242, 242, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.type_box .btn_box {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0;
}

.type_box .btn_box .btn {
  margin-right: 30rpx;
  margin-bottom: 24rpx;
}


.type_box .active_btn {
  border: 1px solid rgba(72, 143, 241, 1) !important;
  color: rgba(72, 143, 241, 1) !important;
  background: rgba(72, 143, 241, 0.2) !important;
}


.goods_title {
  display: inline-block;
  margin:0 30rpx;
}

.shareholderSys_container .top_bg_box {
  width: 100%;
  min-height: 180rpx!important;  
  background:rgba(72, 143, 241, 1);
  border-radius: 0!important;
  padding: 30rpx 0 16rpx 0!important;

}

.shareholderSys_container .search_box .van-search {
  margin-top: 0!important;
}
