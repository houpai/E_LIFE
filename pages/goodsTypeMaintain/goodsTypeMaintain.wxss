page{
  background-color: #F2F2F2;
  padding-bottom:60rpx;
}


.bonusMaintain_container {
  padding:40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}


.bonusMaintain_container .input_box .item_container_box{
  box-sizing: border-box;
  padding:30rpx 0 16rpx 0;
  margin:0 30rpx;  
  border-radius: 6rpx;
  border-bottom:1px solid rgba(0, 0, 0, 0.1)
}

.bonusMaintain_container .item_container_box .margin_box {
  margin-top:20rpx;
  color: rgba(51, 51, 51, 1);
}

.input_box, .item_container_box {
  background: #FFFFFF;
  border-radius: 6rpx;
  padding-bottom:30rpx;
}

.bonusMaintain_container .input_label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
}

.flex_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex_box .left_box .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  margin-top:12rpx;
}

.bonusMaintain_container .withMarginTop {
  margin-top:40rpx;
}

.edit_btn {
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
}

.edit_btn .flex_btn_box {
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  display: flex;
  align-content: center;
  justify-content: center;
}

.edit_btn .van-icon {
  font-size:44rpx;
  margin-right: 8rpx;
}

.edit_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 40rpx;
  box-sizing:border-box ;
  padding:30rpx;
}

.edit_btn .flex_btn_box {
  width: 100%;
  background: #488FF1;
  border-radius: 6rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44px;
}

.right_icon {
  font-size:36rpx;
}

.text_btn_box {
  text-align: center;
}

.text_btn_box .text_btn {
