page {
  background: #F2F2F2;
}

.memberDetail_container {
  font-size: 20rpx;
}

.member_tip {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.member_tip .img {
  display: block;
  width: 48rpx;
  height: 48rpx;
}

.member_tip .text {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFCC63;
  line-height: 34rpx;
}

.memberDetail_container .top_bg_box {
  width: 100%;
  height: 350rpx;
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
  border-radius: 0px 0px 60rpx 60rpx;
  box-sizing: border-box;
}

.memberDetail_container .top_bg_box .member_number {
  box-sizing: border-box;
  padding: 40rpx 30rpx 15rpx 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
}


.customer_detail_box .customer_item {
  height: 160rpx;
  border-radius: 6rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 15rpx 30rpx 30rpx 30rpx;
}

.customer_detail_box .customer_item .customer_img {
  flex-shrink: 0;
}

.customer_detail_box .customer_item .customer_img .img {
  width: 96rpx;
  height: 96rpx;
}

.customer_detail_box .customer_item .customer_message {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  flex: 1;
  width: 0;
  margin-left: 30rpx;
}

.customer_detail_box .customer_item .customer_message .name {
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
  line-height: 44rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.customer_detail_box .customer_item .customer_message .phone {
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  line-height: 40px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.open_btn {
  width: 172rpx;
  height: 56rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 40rpx;
}

.sex_text {
  background: #393FD5;
  border-radius: 14px;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  padding: 0 20rpx;
}

.detail_message_box {
  margin: -80rpx 30rpx 30rpx 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.detail_message_box .h2 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
}

.detail_message_box .card_box {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 30rpx 30rpx 15rpx 30rpx;
  height: 230rpx;
  margin-top: 30rpx;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.detail_message_box .card_box .card_name {
  font-size: 36rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 50rpx;
  margin-bottom: 16rpx;
}

.detail_message_box .card_box .card_status {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 34rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.detail_message_box .card_box .card_status .integral {
  font-size: 40rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 56rpx;
}

.detail_message_box .card_box .card_number {
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 34rpx;
}

.detail_message_box .message_box {
  background: #F2F2F2;
  border-radius: 6rpx;
  margin-top: 40rpx;
  padding: 30rpx;
}

.detail_message_box .message_box .flex_container_box {
  display: flex;
  padding:30rpx 0;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
}

.flex_container_box .label, .flex_container_box .value {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.detail_message_box .message_box .label {
  flex-shrink: 0;
}

.detail_message_box .message_box .value {
  flex: 1;
  width: 0;
  white-space: wrap;
}



.renew_btn {
  height: 72rpx;
  border-radius: 6rpx;
  border: 1px solid #488FF1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  margin-top: 40rpx;
}

.dialog_title  {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
  text-align: center;
}

.dialog_box {
  padding:40rpx;
}

page .renew_input .van-field__input{
  min-height: var(--cell-line-height,72rpx);
  background:rgba(242, 242, 242, 1);
  padding:0 24rpx;
  border-radius: 6px;
}

.dialog_btn_box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin:20rpx 0 0 0;
}

.dialog_btn_box .cancel_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 172rpx;
  height: 56rpx;
  border-radius: 6rpx;
  border: 1px solid #488FF1;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  margin-right: 15rpx;
}

.dialog_btn_box .submit_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 172rpx;
  height: 56rpx;
  border-radius: 6rpx;
  background:rgba(72, 143, 241, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  margin-left: 15rpx;
}