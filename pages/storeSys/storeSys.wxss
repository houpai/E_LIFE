page {
  background-color: #F2F2F2;
  padding-bottom: 60rpx;
}

page .van-uploader__upload {
  background: #F2F2F2 !important;
  border-radius: 6rpx;
}

.storeSys_container {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}

.storeSys_container .mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 100;
}

.storeSys_container .name_logo_box .item_container_box,
.storeSys_container .store_bg_box .item_container_box {
  box-sizing: border-box;
  padding: 30rpx 0 16rpx 0;
  margin: 0 30rpx;
  border-radius: 6rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1)
}

.storeSys_container .name_logo_box .item_container_box .margin_box {
  margin-top: 20rpx;
  color: rgba(51, 51, 51, 1);
}

.name_logo_box,
.store_bg_box,
.item_container_box {
  background: #FFFFFF;
  border-radius: 6rpx;
  padding-bottom: 30rpx;
}

.storeSys_container .input_label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
}

.flex_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex_box .left_box .desc {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  margin-top: 12rpx;
}

.storeSys_container .store_bg_box {
  margin-top: 40rpx;
}

.storeSys_container .other_message_box {
  margin-top: 40rpx;
}

.edit_btn {
  text-align: center;
  display: flex;
  justify-content: center;
  align-content: center;
}

.edit_btn .flex_btn_box {
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  display: flex;
  align-content: center;
  justify-content: center;
}

.edit_btn .van-icon {
  font-size: 44rpx;
  margin-right: 8rpx;
}

.edit_btn {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  /* height: 200rpx; */
  background: #FFFFFF;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 40rpx;
  box-sizing: border-box;
  padding: 30rpx;
}

.edit_btn .flex_btn_box {
  width: 100%;
  background: #488FF1;
  border-radius: 6rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44px;
}

.right_icon {
  font-size: 36rpx;
}

page .van-field__input--disabled {
  color: rgba(51, 51, 51, 1);
}

.storeType_box {
  box-sizing: border-box;
  padding: 30rpx;
  min-height: 600rpx;
}

.storeType_box .tip_text {
  display: inline-block;
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

page .van-action-sheet__header {
  text-align: left;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.storeType_box .primary_type_item {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding: 15rpx 0;
}

.storeType_box .choosed_box {
  margin-bottom: 15rpx;
}

.choosed_box {
  display: flex;
  align-items: center;
}

.choosed_box .choosed_type_tip {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #488FF1;
  line-height: 44rpx;
}

.point_btn {
  display: flex;
  align-items: center;
}

.point_btn .img {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.point_btn .point_text {
  color: #488FF1;
  font-size: 32rpx;
  margin-left: 12rpx;
}

.map_box {
  margin: 24rpx 0 0 0;
  width: 100%;
  height: 200px;
  padding-bottom: 60rpx
}

.map_box .map {
  width: 100%;
  height: 100%;
}

.edit_address_box {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #fff;
  z-index: 100;
  box-sizing: border-box;
  padding: 30rpx;
}

.edit_address_box .introduce {
  font-size: 14px;
  color: #222;
  line-height: 25px;
  margin-bottom: 20px;
}

.edit_address_box .edit_map_box {
  width: 100%;
  height: 70%;
}

.edit_address_box .edit_map_box .map {
  width: 100%;
  height: 100%;
}


.feature-content {
	padding-right: 20px;
  height: 56px;
  display: flex;
	justify-content: space-between;
  line-height: 56px;
}

.feature-label {
	padding-right: 10px;
  font-size: 14px;
	color: #222;
	white-space: nowrap;
}
.feature-txt {
	display:flex;
	flex: 1;
	justify-content: flex-end;
	align-items: center;
	line-height: 20px;
  font-size: 14px;
	color:rgba(34,34,34,0.5);
	word-break: break-all;
}

/* 边线 */
.border-top {
	border-top: 0.5px solid rgba(0, 0, 0, 0.5);
}
.border-bottom {
	border-bottom: 0.5px solid rgba(0, 0, 0, 0.5);
}

.edit_address_box .btn_box {
  width: 100%;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:60rpx;
}

.edit_address_box .btn_box .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 172rpx;
  height: 56rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 400;
}

.edit_address_box .btn_box .cancel_btn {
  color: #488FF1;
  margin-right: 30rpx;
  border: 1px solid #488FF1!important;
}

.edit_address_box .btn_box .submit_btn {
  background:rgba(72, 143, 241, 1);
  border: 1px solid #488FF1!important;
  color: #fff;
  margin-left: 30rpx;
}


.noscroll {
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
} 

.primary_type_list {
  max-height: 600rpx;
  overflow-y: scroll;
  box-sizing: border-box;
  padding:0 30rpx 0 0;
}




