page {
  background: #F2F2F2;
}

.identitySelect_container {
  font-size: 20rpx;
}

.identitySelect_container .top_bg_box {
  width: 100%;
  height: 360rpx;
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
  border-radius: 0px 0px 60rpx 60rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.identitySelect_container .top_bg_box .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 56rpx;
  margin-bottom: 16rpx;
  margin-top: 30rpx;

}

.identitySelect_container .top_bg_box .tip {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;


}



.identity_list_box {
  margin: -160rpx 30rpx 30rpx 30rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  padding: 30rpx;
}


.identity_item {
  box-sizing: border-box;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #F2F2F2;
  margin-bottom: 32rpx;
  border-radius: 6rpx;
}

.identity_item .left_box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.identity_item .left_box .identity {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 16rpx;

}

.identity_item .left_box .identity_tip {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;


}

.identity_item .identity_img image {
  display: block;
  width: 108rpx;
  height: 108rpx;


}