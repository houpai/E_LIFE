page {
  background: #F2F2F2;
}

.memberSys_container {
  font-size: 20rpx;
}

.memberSys_container .top_bg_box {
  width: 100%;
  height: 120rpx;
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
  border-radius: 0px 0px 60rpx 60rpx;
}

.memberSys_container .search_box {
  margin: 0 30rpx;
}

.memberSys_container .search_box .van-search__content {
  background: #FFFFFF;
  padding: 0;
  border-right: 1px solid rgba(0, 0, 0, .1)
}

.memberSys_container .search_box .van-search {
  padding: 0 20rpx;
  border-radius: 60rpx;
  margin-top: -46rpx;
  overflow: hidden;
}


.memberSys_container .search_box .van-field__input {
  min-height: 66rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
}

.memberSys_container .search_box .van-cell__left-icon-wrap,
.memberSys_container .search_box .van-cell__right-icon-wrap {
  height: var(--cell-line-height, px);
  color: #CCCCCC;
  font-size: 40rpx;
}

.memberSys_container .search_box .search_btn {
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 44rpx;
  height: 100%;
  padding: 0 20rpx;
}

.customer_list_box {
  margin-top: 40rpx;
}


.customer_list_box .customer_item {
  margin: 0 30rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  margin-bottom: 40rpx;
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
}

.customer_list_box .customer_item .customer_img {
  flex-shrink: 0;
}

.customer_list_box .customer_item .customer_img .img {
  width: 96rpx;
  height: 96rpx;
}

.customer_list_box .customer_item .customer_message {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  width: 0;
  margin-left: 30rpx;
}

.customer_list_box .customer_item .customer_message .nameAndPhone {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 50rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.customer_list_box .customer_item .customer_message .card_message text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.customer_list_box .customer_item .customer_message .card_message .card_state_normal {
  color: rgba(72, 143, 241, 1);
  margin-left: 40rpx;
}

.customer_list_box .customer_item .customer_message .card_message .card_state_overData {
  color: rgba(241, 89, 72, 1);
}

.customer_list_box .customer_item .customer_message .card_number {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.customer_list_box .customer_item .customer_message .balance {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(241, 89, 72, 1);
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


/* 3.10号新增 */
.memberSys_container .top_bg_box {
  height: 146rpx !important;
  padding: 20rpx 30rpx !important;
  box-sizing: border-box;
  display: flex;
  /* align-items: center; */
  justify-content: space-between;

}

.memberSys_container .top_bg_box .top_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding-top: 12rpx;
}


.memberSys_container .top_bg_box .select_box {
  display: flex;
  /* align-items: center; */
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding-top: 12rpx;
}


.memberSys_container .top_bg_box .select_box .select_text {
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 40rpx;

}

.memberSys_container .top_bg_box .select_box .select_img {
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}


.dialog_title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;

}

.dialog_content {
  box-sizing: border-box;
  padding: 22rpx 30rpx 40rpx 30rpx;
}

.dialog_content .line {
  background-color: rgba(0, 0, 0, 0.2);
  height: 2rpx;
}

.dialog_content .time_box {
  display: flex;
  align-items: center;
}

.dialog_content .time_box .start_time {
  width: 296rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(242, 242, 242, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
}

.dialog_content .time_box .end_time {
  width: 296rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(242, 242, 242, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;

}

.withOut_value {
  color: #999999 !important;
}

.split_line {
  margin: 0 20rpx;
  color: rgba(0, 0, 0, 0.2);
}

.dialog_content .btn_box {
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog_content .btn_box .btn {
  width: 326rpx;
  height: 80rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
  border: 1px solid #488FF1;
  font-size: 32rpx;
  font-weight: 400;
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog_content .btn_box .cancel_btn {
  color: #488FF1;
  border: 1px solid #488FF1;
  margin-right: 20rpx;
}

.dialog_content .btn_box .submit_btn {
  color: #ffffff;
  background: #488FF1;
  margin-left: 20rpx;
}

page .dialog_content .van-field__input {
  height: 64rpx;
  text-align: center;
}

page .dialog_content .field-index--van-field  {
  background-color: rgba(242, 242, 242, 1);
  height: 64rpx;
  padding:0;
}