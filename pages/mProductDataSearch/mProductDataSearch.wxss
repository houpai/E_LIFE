page {
  background: #ffffff;
}

page .van-tab--active .van-ellipsis {
  font-weight: 700 !important;
  color: #333333;
}

page .van-tabs__scroll {
  background-color: #fff!important;
}

page .van-ellipsis {
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

page .van-tabs__line {
  background-color: rgba(72, 143, 241, 1);
}


.mProductDataSearch_container .search_box {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 30rpx;
}

.mProductDataSearch_container .search_box .back_text {
  margin-right: 30rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 44rpx;
}

.mProductDataSearch_container .search_box .van-search__content {
  background: #F2F2F2;
  padding: 0;
  border-right: 1px solid rgba(0, 0, 0, .1)
}

.mProductDataSearch_container .search_box .van-search {
  width: 100%;
  padding: 0 20rpx;
  border-radius: 60rpx;
  overflow: hidden;
  height: 80rpx;
  background: #F2F2F2!important;
}


.mProductDataSearch_container .search_box .van-field__input {
  min-height: 66rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  width: 100%;
}

.mProductDataSearch_container .search_box .van-cell__left-icon-wrap,
.mProductDataSearch_container .search_box .van-cell__right-icon-wrap {
  height: var(--cell-line-height, px);
  color: #CCCCCC;
  font-size: 40rpx;
}

.mProductDataSearch_container .search_box .search_btn {
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 44rpx;
  height: 100%;
  padding: 0 20rpx;
}


.mProductDataSearch_container {
  font-size: 20rpx;
}

.mProductDataSearch_container .top_bg_box {
  width: 100%;
  height: 132rpx;
  box-sizing: border-box;
  background: #fff;
  padding: 0;
  display: flex;
}

.mProductDataSearch_container .top_bg_box .type_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.mProductDataSearch_container .top_bg_box .search_btn .img {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.mProductDataSearch_container .top_bg_box .type_container {
  width: 66%;
}

page .achievement_type {
  width: 50%;
}


.list_box {
  margin-top: 30rpx;
}


.table_box {
  margin:0  30rpx;
  background: #FFFFFF;
box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:0 30rpx 40rpx 30rpx;
}

.scroll_table {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: scroll;
  flex-direction: column;
}

.table_box .table_flex_item {
  display: flex;
  align-items: center;

  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  padding:30rpx 0;


}

.table_box .table_title {
  color: #999999!important;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
}

.table_box .table_flex_item .flex_value {
  width: 25%;
  flex-shrink: 0;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.table_box .table_flex_item .wd10 {
  width: 10%!important;
}



