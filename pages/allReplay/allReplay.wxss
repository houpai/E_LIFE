page {
    height: 100%;
    background-color: rgba(242, 242, 242, 1);
}


.replay-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}


.replay-container .scroll-list {
    box-sizing: border-box;
    padding: 40rpx 0;
    margin-bottom: 40rpx;
}

.replay-container .scroll-list .list_item {

    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 30rpx;

}



.replay-container .scroll-list .list_item .check_img .img {
    display: block;
    width: 40rpx;
    height: 40rpx;
}

.replay-container .scroll-list .list_item .list_item_container {
    flex: 1;
    width: 0;
    background: #FFFFFF;
    border-radius: 6rpx;
    padding: 30rpx;
    margin: 0 20rpx 30rpx 20rpx;
}

.replay-container .scroll-list .list_item .top {
    display: flex;
}

.replay-container .scroll-list .list_item .top .replay_btn {
    width: 152rpx;
    height: 56rpx;
    background: #488FF1;
    border-radius: 6rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
}

.replay-container .scroll-list .list_item .top .replay_name {
    flex: 1;
    width: 0;
    font-size: 32rpx;
    font-weight: 400;
    color: #333333;
    line-height: 44rpx;

}


.replay-container .scroll-list .list_item .bottom {
    display: flex;
    margin-top: 30rpx;
}


.replay-container .scroll-list .list_item .bottom .date {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    line-height: 34rpx;
}



.replay-container .scroll-list .list_item .bottom .replay_detail {
    flex: 1;
    width: 0;
    display: flex;
    align-items: center;
}

.replay-container .scroll-list .list_item .bottom .replay_detail .detail {
    font-size: 32rpx;
    font-weight: bold;
    color: #FC302C;
    line-height: 44rpx;
    margin-right: 60rpx;

}

.replay-container .scroll-list .list_item .bottom .replay_detail .name {
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
    line-height: 40rpx;

}

.allCheck_box {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    box-sizing: border-box;
    height: 160rpx;
    background: #FFFFFF;
    box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: space-between;
    padding: 40rpx;
}

.allCheck_box .all_btn {
    font-size: 28rpx;
    font-weight: 400;
    color: #488FF1;
    line-height: 40rpx;

}


.allCheck_box .submit_btn {
    width: 200rpx;
    height: 60rpx;
    background: #488FF1;
    border-radius: 6rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;

}