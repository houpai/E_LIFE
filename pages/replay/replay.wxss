page {
  height: 100%;
  background-color: rgba(242, 242, 242, 1);
}


page .type_container {
  width: 50%;
}

page .type_container .van-tabs__scroll {
  background-color: rgba(72, 143, 241, 1)
}

page .type_container .van-tab--active .van-ellipsis {
  font-weight: 700 !important;
  color: #fff;
}

page .type_container .van-ellipsis {
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
}

page .type_container .van-tabs__line {
  background-color: #fff;
}




.replay-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.replay-container .top_bg_box {
  width: 100%;
  height: 240rpx;
  background: rgba(72, 143, 241, 1);
  box-sizing: border-box;
  padding-top: 20rpx;
}

.replay-container .top_bg_box .time_box {
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}

.replay-container .top_bg_box .time_box .time_check_box {
  width: 100%;
  height: 68rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 6rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

.replay-container .scroll-list {

box-sizing: border-box;
  padding: 40rpx 0;
  margin-bottom: 40rpx;
}
  



 .search_box {
  margin:0 30rpx;
}

 .search_box .van-search__content {
  background: #FFFFFF;
  padding:0;
  border-right:1px solid rgba(0, 0, 0,.1)
}

 .search_box .van-search {
  padding:0 20rpx;
  border-radius: 60rpx;
  margin-top:30rpx;
  overflow: hidden;
}


 .search_box .van-field__input  {
  min-height: 66rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
}

 .search_box .van-cell__left-icon-wrap,  .search_box .van-cell__right-icon-wrap  {
  height: var(--cell-line-height,px);
  color: #CCCCCC;
  font-size:40rpx;
}

 .search_box .search_btn {
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 44rpx;
  height: 100%;
  padding:0 20rpx;
}


 .item_item{
  margin:0 30rpx;
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  margin-bottom:40rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding:30rpx;
}

 .item_item .item_img {
  flex-shrink: 0;
  position: relative;
}

 .item_item .item_img .is_member_tip {
  position: absolute;
  top:-25rpx;
  right: 0;
  z-index: 1;
  display: block;
  width: 50rpx;
  height: 50rpx;
}

 .item_item .item_img .img {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

 .item_item .item_message {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  flex: 1;
  width: 0;
  margin-left: 30rpx;
}

 .item_item .item_message .nameAndPhone {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 50rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

 .item_item .item_message .source_message_box {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.right_icon{
  font-size: 40rpx;
}






