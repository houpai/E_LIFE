page {
  min-height: 100%;
  background-color: #ffffff;
}

.wallet_container {
  font-size: 20rpx;
}

.wallet_banner {
  width: 100%;
  height: 510rpx;
  background-color: #488FF1;
  border-radius: 0px 0px 30rpx 30rpx;
  box-sizing: border-box;
  padding: 70rpx 30rpx 60rpx 30rpx;
}

.wallet_banner .details_btn {
  font-size: 32rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 44px;
  padding:10rpx;
  float:right;
}

.wallet_box {
  margin: -276rpx 30rpx 300rpx 30rpx;
  /* height: 516rpx; */
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.wallet_box .wallet_title {
  font-size: 32rpx;
  font-weight: 400;
  color: #666666;
  line-height: 44rpx;

}

.wallet_box .wallet_detail_box {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 344rpx;
  height: 112rpx;
  background: rgba(218, 233, 252, 1);
  border-radius: 56rpx;
  margin: 40rpx 0;
}

.wallet_box .wallet_detail_box .surplus {
  font-size: 80rpx;
  font-weight: bold;
  color: rgba(72, 143, 241, 1);
  margin-right: 16rpx;
}

.wallet_box .wallet_detail_box .unit {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(72, 143, 241, 1);
}

.wallet_box .wallet_tip {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

page .btn {
  margin: 0 30rpx;
  height: 88rpx;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

page .cash_out_btn {
  background: rgba(72, 143, 241, 1);
  color: #ffffff
}

page .recharge_btn {
  color: rgba(72, 143, 241, 1);
  border: 1px solid #488FF1;
}