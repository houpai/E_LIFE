page {
  background: #F2F2F2;
}

page .van-tab--active .van-ellipsis {
  font-weight: 700 !important;
  color: #333333;
}

page .van-tabs__scroll {
  background-color: #F2F2F2 !important;
}

page .van-ellipsis {
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

page .van-tabs__line {
  background-color: rgba(72, 143, 241, 1);
}

.customerList_container {
  font-size: 20rpx;
}

.customerList_container .top_bg_box {
  width: 100%;
}

.tab_box {
  width: 66%;
  background-color: #F2F2F2 !important;
}

.mCustomer_message {
  height: 178rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.mCustomer_message .img_box {
  flex-shrink: 0;
}

.mCustomer_message .message_box {
  flex: 1;
  width: 0;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.mCustomer_message .img_box .img {
  display: block;
  width: 96rpx;
  height: 96rpx;
}

.mCustomer_message .message_box .name_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.mCustomer_message .message_box .name_box .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;

}

.mCustomer_message .message_box .name_box .tip {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}

.mCustomer_message .message_box .phone {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.card_item {
  background: #FFFFFF;
  border-radius: 6rpx;
  margin: 0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  padding: 30rpx;
}

.scroll-box {
  padding: 30rpx 0;
  box-sizing: border-box;
}

.card_item .top_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 108rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);

}

.card_item .top_box .card {
  background: linear-gradient(180deg, #A60100 0%, #A60100 100%);
  border-radius: 6rpx;
}

.card_item .top_box .card,
.card_item .top_box .card_message {
  width: 48%;
  height: 100%;
}


.card_item .top_box .card_message .card_name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  line-height: 40rpx;
  margin-bottom: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card_item .top_box .card_message .card_date {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card_item .bottom_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 30rpx;
}

.card_item .bottom_box .yue_box {
  width: 48%;
  display: flex;
  justify-content: space-between;
}

.card_item .bottom_box .yue_box .label {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.card_item .bottom_box .yue_box .value {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
}

.consumption_item {
  margin: 0 30rpx 30rpx 30rpx;
  height: 170rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  
}

.consumption_item .consumption_name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  line-height: 40rpx;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.consumption_item  .consumption_message {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.consumption_value .money_value {
  font-size: 32rpx;
  font-weight: bold;
  color: #F15948;
  line-height: 44rpx;
}

.consumption_value .type {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  margin-left: 16rpx;
}

.consumption_message .consumption_date {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}