page{
  background-color: #F2F2F2;
}

.storeIndex_container {

}

.storeIndex_container .store_bg {
  height: 750rpx;
}
.storeIndex_container image {
  display: block;
  width: 100%;
  height: 750rpx;
}

.storeIndex_container .store_message_box {
  margin:-80rpx 30rpx 80rpx 30rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  box-sizing: border-box;
  padding:30rpx
}

.storeIndex_container .store_message_box .name_logo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
  padding-bottom:30rpx;
}

.storeIndex_container .store_message_box .name_logo .left {
  display: flex;
  flex-direction: column;
  justify-items:center;
  flex: 1;
  flex-shrink: 0;
}

.storeIndex_container .store_message_box .name_logo .left .sub_label{
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40px;

}

.storeIndex_container .message_label{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;

}

.storeIndex_container .store_message_box .name_logo .right .img{
  display: block;
  width: 108rpx;
  height: 108rpx;
}



.storeIndex_container .store_message_box .with_margin {
  margin:30rpx 0
}

.storeIndex_container .store_message_box .message_value {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}

.storeIndex_container .store_message_box .codeImg_value {
  display: flex;
}

.storeIndex_container .store_message_box .tip_box {
  display: flex;
  align-items: flex-end;
  flex: 1;
  width: 0;
  margin-left:16rpx;
}

.storeIndex_container .store_message_box .tip_text {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;

}


.storeIndex_container .store_message_box .codeImg_value .img_box {
  flex-shrink: 0;
}
.storeIndex_container .store_message_box .codeImg_value image {
  display: block;
  width: 168rpx;
  height: 168rpx;
}

.storeIndex_container .edit_btn_box {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
  color: #488FF1;
  line-height: 40rpx;
}

.storeIndex_container .edit_btn_box .van-icon {
  font-size:44rpx;
  margin-right: 8rpx;
}
