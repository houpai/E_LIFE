page {
  height: 100%;
  background: #ffffff;
}

.paySuccess_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.paySuccess_container .img {
  display: block;
  width: 156rpx;
  height: 156rpx;
  margin:160rpx 0 40rpx 0;
}

.paySuccess_container .tip {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 60rpx;
}

.paySuccess_container .value {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  line-height: 84rpx;
  margin-bottom: 100rpx;
}

.paySuccess_container .back_btn {
  width: 310rpx;
  height: 72rpx;
  border-radius: 6rpx;
  border: 1px solid #488FF1;
  font-size: 32rpx;
  font-weight: bold;
  color: #488FF1;
  display: flex;
  justify-content: center;
  align-items: center;
}
