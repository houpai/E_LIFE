.login_container {
  font-size: 20rpx
}


.login_banner {
  width: 100%;
  height: 300rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.login_title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 56rpx;
  margin-left: 60rpx;
  margin-bottom: 40rpx;
}


.login_box {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 120rpx 60rpx 0 60rpx;
}

.input_item {
  display: flex;
  align-items: center;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  padding: 40rpx 0;
}

.input_label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44px;
  flex-shrink: 0
}

.input {
  margin-left: 40rpx;
  flex: 1;
  width: 0;
}

.btn_box {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx
}

.btn_box .img {
  display: block;
  width: 50%;
  height: 50%;
}


.login_btn_box {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 120rpx 0 0 0;
}

.login_btn_box .login_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
  width: 630rpx;
  height: 88rpx;
  background: #488FF1;
  border-radius: 6rpx;
}
