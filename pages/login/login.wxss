.login_container {
  font-size: 20rpx
}


.login_banner {
  width: 100%;
  height: 288rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #488FF1;
}

.login_banner .img {
  display: block;
  width: 224rpx;
  height: 224rpx;
}

.login_title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  line-height: 76px;
  text-align: center;
}

.login_box {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 60rpx 0 60rpx;
}

.input_item {
  display: flex;
  align-items: center;
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  padding: 40rpx 0;
}

.input_label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44px;
  flex-shrink: 0
}

.input {
  margin-left: 40rpx;
  flex: 1;
  width: 0;
  height: 80rpx;
  line-height: 80rpx;
}

.btn_box {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx
}

.btn_box .img {
  display: block;
  width: 50%;
  height: 50%;
}



.login_btn_box_yixie {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 80rpx 0 0 0;
}

.login_btn_box_yixie .box_container {
  display: flex;
  align-items: center;
  width: 630rpx;
}

.login_btn_box_yixie .box_container .xieyi_desc {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}

.login_btn_box_yixie .box_container .xieyi_desc .liang {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(72, 143, 241, 1);
  line-height: 40rpx;
}

page .van-checkbox__icon--disabled {
  background-color: #fff!important;
}

page .van-checkbox__icon--checked {
  color: #fff!important;
  background-color: #1989fa!important;
  border-color: #1989fa!important;
}


.login_btn_box {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0 0 0;
}

.login_btn_box .login_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
  width: 630rpx;
  height: 88rpx;
  background: #488FF1;
  border-radius: 6rpx;
}


.loginType_btn_box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}

.loginType_change_btn .img{
  display: block;
  width: 48rpx;
  height: 48rpx;
}

.loginType_change_btn text{
  font-size: 32rpx;
  font-weight: 400;
  color: #666666;
  line-height: 44rpx;
}

.loginType_change_btn .line{
  margin: 0 32rpx;
}

.loginType_change_btn {
  display: flex;
  justify-content: center;
  align-items: center;
}

.sendCode_btn {
  width: 180rpx;
  height: 56rpx;
  border-radius: 6rpx;
  border: 1px solid #488FF1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #488FF1;
}

.disabled_send_btn {
  color: #CCCCCC!important;
  border: 1px solid #CCCCCC!important;
}


.moni_dialog_xieyi .dialog_box {
  width: 566rpx;
  height: 800rpx;
  position: fixed;
  left: 0;
  right: 0;
  top:0;
  bottom: 0;
  margin:auto;
  border-radius: 6rpx;
  box-sizing: border-box;
  z-index: 9;
  padding: 0!important;

}

.moni_dialog_xieyi .dialog_box_high {
  height:800rpx;
  display: flex;
  flex-direction: column;
}

.moni_dialog_xieyi  .field-index--van-field {
  padding:10px 0!important;
}

.dialog_xieyi_title {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 44rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.dialog_xieyi_title .close_btn{
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
}

.xieyi_detail {
  flex: 1;
  height: 0;
}
.xieyi_detail .scroll_container{
  box-sizing: border-box;
  font-size:28rpx;
  font-weight: 400;
  color: #333333;
  line-height:40rpx;
  padding: 30rpx;
}


.timer_box {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}


.timer_box .know_btn {
  width: 504rpx;
  height: 72rpx;
  background: rgba(72, 143, 241, 0.4);
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #488FF1;
  color: #fff;
}
.timer_box .know_btn.disabled {
  background: rgba(72, 143, 241, 0.4);
}
