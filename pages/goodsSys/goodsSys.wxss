page {
  background: #F2F2F2;
}

.goodsSys_container {
  font-size: 20rpx;
}

.goodsSys_container .top_bg_box {
  width: 100%;
  height: 260rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #488FF1 0%, #7EC2F9 100%);
  border-radius: 0px 0px 60rpx 60rpx;
  padding: 60rpx 30rpx;
}

.goodsSys_container .top_bg_box .add_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goodsSys_container .top_bg_box .add_btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goodsSys_container .top_bg_box .goods_title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 50rpx;

}

.goodsSys_container .top_bg_box .add_btn .img {
  display: block;
  width: 32rpx;
  height: 32rpx;
  margin: 0 10rpx 0 0;
}

.goodsSys_container .top_bg_box .add_btn .text {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
}


.list_box {
  margin-top: -100rpx;
}

.list_box .goods_item {
  height: 328rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.1);
  border-radius: 6rpx;
  margin: 0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  padding: 30rpx;
}

.list_box .goods_item .goods_name {
  font-size: 30rpx;
  font-weight: 700;
  color: #333333;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 16rpx;
}


.list_box .goods_item .text {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.goods_item .goods_price {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
  height: 56rpx;
}

.goods_item .goods_price .current_price {
  font-size: 40rpx;
  font-weight: 500;
  color: #FC302C;
  line-height: 56rpx;
}

.goods_item .goods_price .current_price .unit {
  font-size: 30rpx;
  line-height: 42rpx;
}

.goods_item .goods_price .price {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  display: flex;
  align-items: flex-end;
  height: 100%;
  margin-left: 30rpx;
}

.goods_item .goods_price .price .text {
  text-decoration: line-through;
}

.goods_item .btn_box {
  display: flex;
  justify-content: flex-end;
}

.goods_item .btn_box .btn {
  width: 136rpx;
  height: 56rpx;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
}

.goods_item .btn_box .edit_btn {
  color: #999999;
  border: 1px solid #999999;
  margin-right: 30rpx;
}

.goods_item .btn_box .put_btn {
  background: #488FF1;
  color: #fff;
  border: 1px solid #488FF1;
}


/* 3.10号新增 */

page .van-dropdown-menu {
  background-color: inherit;

}

page .van-dropdown-menu__title {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 50rpx;
  color: #fff
}

page .van-dropdown-menu__title:after {
  border-width: 4px;
  right: -8px;

}

.type_box {
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}

.type_box .btn {
  height: 56rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 6rpx;
  border: 1px solid rgba(242, 242, 242, 1);
  padding: 0 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;


  font-size: 28rpx;
  font-weight: 400;

}


.type_box .all_btn {
  width: 180rpx;
  height: 56rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 6rpx;
  border: 1px solid rgba(242, 242, 242, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.type_box .btn_box {
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0;
}

.type_box .btn_box .btn {
  margin-right: 30rpx;
  margin-bottom: 24rpx;
}


.type_box .active_btn {
  border: 1px solid rgba(72, 143, 241, 1) !important;
  color: rgba(72, 143, 241, 1) !important;
  background: rgba(72, 143, 241, 0.2) !important;
}